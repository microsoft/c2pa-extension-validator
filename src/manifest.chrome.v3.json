{
    "manifest_version": 3,
    "name": "c2pa-extension-validator",
    "version": "0.1.3",
    "permissions": [
        "storage",
        "scripting",
        "offscreen",
        "notifications",
        "webRequest",
        "tabs",
        "webNavigation",
        "activeTab",
        "contextMenus",
        "alarms",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "side_panel": {
        "default_path": "panel.html"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
        "16": "icons/cr16.png",
        "48": "icons/cr48.png",
        "128": "icons/cr128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "inject.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "c2pa.worker.js",
                "icons/*.svg",
                "toolkit_bg.wasm",
                "iframe.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}